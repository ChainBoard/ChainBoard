<% icon_sizes = Rails.configuration.serviceworker.icon_sizes %>
{
  "name": "ChainBoard",
  "short_name": "ChainBoard",
  "start_url": "/",
  "icons": [
  <% icon_sizes.map { |s| "#{s}x#{s}" }.each.with_index do |dim, i| %>
    {
      "src": "<%= "/android-chrome-#{dim}.png" %>",
      "sizes": "<%= dim %>",
      "type": "image/png"
    }<%= i == (icon_sizes.length - 1) ? '' : ',' %>
  <% end %>
  ],
  "theme_color": "#6C8532",
  "background_color": "#6C8532",
  "display": "standalone"
}
